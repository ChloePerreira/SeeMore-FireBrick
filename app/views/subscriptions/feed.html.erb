<% if @tweets.size == 0 %>
  Search for users to grow your feed!
<% end %>

<% @tweets.each do |t| %>
  <p> <img src= "<%= t.user.profile_image_url_https %>"></p>
  <p><%= link_to "#{t.user.screen_name}", "https://twitter.com/intent/user?user_id=#{t.user.id}" %></p>
  <p><%= t.user.name %></p>
  <p><%= t.text %></p>
  <p><%= t.created_at %></p>
  <hr>
<% end %>
