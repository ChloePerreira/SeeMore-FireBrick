<h1>Your Aggre-gator Feed</h1>

<% if @all.size == 0%>
  Search for users to grow your feed!
<% end %>

<div class="container">
<% @all.each do |thing| %>
  <% if thing.inspect[0..8] == "#<Twitter" %>
    <div class="row">

      <div class="col-lg-2 col-md-2 col-xs-2">
        <div><img src= "<%= thing.user.profile_image_url_https %>"></div>
      </div>
      <div class="col-lg-10 col-md-10 col-xs-10">
        <div><%= thing.user.name %> <%= link_to "#{thing.user.screen_name}", "https://twitter.com/intent/user?user_id=#{thing.user.id}" %></div>
        <div><%= auto_link(thing.text).html_safe %></div>
        <div><%= thing.created_at.strftime("Posted on %c") %></div>
      </div>

    </div>
    <hr>
  <% else %>
    <div class="row">
      <div class="col-lg-12">
        <div class="responsive-container"><iframe src="//player.vimeo.com/video/<%=thing['id']%>" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe><p><%=thing['title']%> from <%=thing['user_name']%></div>
        <div><%=DateTime.parse(thing['upload_date']).strftime("Posted on %c")%></div>
      </div>
    </div>
    <hr>
  <% end %>
<% end %>
</div>
