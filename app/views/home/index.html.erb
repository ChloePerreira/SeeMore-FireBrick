<!DOCTYPE html>
<html>
<body>
  <div class="container">

    <div class="row">
      <% if session[:user_id] %>
        Welcome, <%= User.find(session[:user_id]).name %>!&nbsp;
        <%= link_to "Sign out", destroy_session_path, method: :delete %>
      <% else %>
        <%= link_to "Sign in with Twitter", "/auth/twitter" %>
        <%= link_to "Sign in with Vimeo", "/auth/vimeo" %>
      <% end %>
    </div>


    <form class="navbar-form navbar-left" role="search">
      <div class="form-group">
        Vimeo<input type="text" class="form-control" placeholder="Search">
      </div>
      <button type="submit" class="btn btn-default">Search</button>
    </form>


    <form class="navbar-form navbar-left" role="search">
      <div class="form-group">
        Twitter<input type="text" class="form-control" placeholder="Search">
      </div>
      <button type="submit" class="btn btn-default">Search</button>
    </form>

    </div>
  </div>
</body>
</html>
