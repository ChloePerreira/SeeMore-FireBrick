<!DOCTYPE html>
<html>
<body>
  <div class="row" id="form-inline">
    <div class="col-md-6">
      <div class="form-inline" role="form">
        <% if current_user %>
          <%= form_tag twitter_results_path, method: :get do %>
          Twitter <%= text_field_tag :provider_search, params[:provider_search], :placeholder => "Search", class:"form-control" %>
          <%= hidden_field_tag :provider, "twitter" %>
          <%= submit_tag "Search", :name => nil, class:"btn btn-default" %>
          <% end %>
        <% end %>
      </div>
    </div>

    <div class="col-md-6">
      <div class="form-inline" role="form">
        <% if current_user %>
          <%= form_tag vimeo_results_path, method: :get do %>
          Vimeo <%= text_field_tag :provider_search, params[:provider_search], :placeholder => "Search", class:"form-control" %>
          <%= hidden_field_tag :provider, "vimeo" %>
          <%= submit_tag "Search", :name => nil, class:"btn btn-default" %>
          <% end %>
        <% end %>
      </div>
</body>
</html>
