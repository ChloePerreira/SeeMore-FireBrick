<!DOCTYPE html>
<html>
<body>
  <div class="container">

    <div class="row">
      <% if session[:user_id] %>
        Welcome, <%= User.find(session[:user_id]).name %>!&nbsp;
        <%= link_to "Sign out", destroy_session_path, method: :delete %>
        <% if Provider.find_by(user_id: session[:user_id], name: "twitter")==nil %>
          <%= link_to "Connect via Twitter", "/auth/twitter" %>
        <% end %>
        <% if Provider.find_by(user_id: session[:user_id], name: "vimeo")==nil %>
          <%= link_to "Connect via Vimeo", "/auth/vimeo" %>
        <% end %>
      <% else%>
        <%= link_to "Sign in with Twitter", "/auth/twitter" %>
        <%= link_to "Sign in with Vimeo", "/auth/vimeo" %>
      <% end %>
    </div>

    <%= form_tag twitter_search_path do %>
      <%= text_field_tag :twitter_search, params[:twitter_search], :placeholder => "Username" %>
      <%= submit_tag "Search", :name => nil, :class => "button" %>
      <% end %>


    <form class="navbar-form navbar-left" role="search">
      <div class="form-group">
        Twitter<input type="text" class="form-control" placeholder="Search">
      </div>
      <button type="submit" class="btn btn-default">Search</button>
    </form>

    </div>
  </div>
</body>
</html>
